<div id="login">
  <div class="container">
    <div class="row">
      <div class ='col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 well'>
        <h1 class="form-signin-heading">Login</h1>
          <%= link_to "I'm Patient", login_path, class: "btn btn-lg" %>
          <%= link_to "I'm a Doctor", new_user_path, class: "btn btn-lg" %>
          <%= form_tag sessions_path do %>
        <div class="field">
          <%= text_field_tag :email, params[:email], {class: "form-control input-lg", placeholder: "Email"} %>
        </div>
        <div class="field">
            <%= password_field_tag :password,"", {class: "form-control input-lg", placeholder: "Password"} %>
        </div>
        <div class="actions"><%= submit_tag "Log in", {class: "btn btn-primary btn-lg"} %></div>
        <% end %>

      </div>
    </div>
  </div>
</div>