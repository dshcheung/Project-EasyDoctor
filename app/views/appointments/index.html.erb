<h1>Appointments#index</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>datetime</th>
      <th>status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%=appointment.id%></td>
        <td><%=appointment.datetime%></td>
        <td><%=appointment.status%></td>
        <td>
          <%= form_for appointment, method: "delete", url: appointment_path(appointment) do |f| %>
            <%= f.submit "Delete" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
