<div id="usersignup">
  <div class="container">
    <div class="row">
      <div class ='col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 well'>
        <h1 class="form-signin-heading">Sign Up</h1>

        <%= form_for @user do |f| %>
            <select name="user[is_doctor]" id="user_select">
              <option value="false">Patient</option>
              <option value="true"> Doctor </option>
            </select>

          <div class="field">
            <%= f.text_field :name, {class: "form-control input-lg", placeholder: "Name"} %>
          </div>

          <div class="field">
            <%= f.text_field :mobile, {class: "form-control input-lg", placeholder: "Mobile"} %>
          </div>

          <div class="field">
            <%= f.text_field :email, {class: "form-control input-lg", placeholder: "Email"} %>
          </div>

          <div class="field">
            <%= f.password_field :password, {class: "form-control input-lg", placeholder: "Password"} %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation,{class: "form-control input-lg", placeholder: "Confirmed Password"} %>
          </div>

          <div class="field doctors">
            <%= f.text_field :district, {class: "form-control input-lg", placeholder: "District"} %>
          </div>

          <div class="field doctors">
            <%= f.text_field :address, {class: "form-control input-lg", placeholder: "Address"} %>
          </div>

          <div class="actions">
            <%= submit_tag "Submit", {class: "btn btn-primary btn-lg"} %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
