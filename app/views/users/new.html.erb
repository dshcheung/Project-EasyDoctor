<div id="usersignup">
  <div class="contiainer">
    <div class ='col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 well'>
      <%= form_for @user do |f| %>
        <!-- Error Message -->
        <% if @user.errors.any? %>
          <div>
            <h2>Form is invalid</h2>
            <ul>
              <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

      <h1 class="form-signin-heading">Sign Up</h1>
      <a class="btn btn-lg" href="<%= login_path %>">I'm Patient</a>
      <a class="btn btn-lg"href="<%= new_user_path %>">I'm a Doctor</a>
      <div class="field">
        <%= f.text_field :name, {class: "form-control input-lg", placeholder: "Name"} %>
      </div>
      <div class="field">
        <%= f.text_field :mobile, {class: "form-control input-lg", placeholder: "Mobile"} %>
      </div>
      <div class="field">
        <%= f.text_field :email, {class: "form-control input-lg", placeholder: "Email"} %>
      </div>
      <div class="field">
        <%= f.password_field :password, {class: "form-control input-lg", placeholder: "Password"} %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation,{class: "form-control input-lg", placeholder: "Confirmed Password"} %>
      </div>
        <div class="actions"><%= submit_tag "Submit", {class: "btn btn-primary btn-lg"} %></div>
    <% end %>
    </div>
  </div>
</div>